<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>NutriNourish</title>
</head>

<body>
    <%- include ('partials/navbar') %>
        <br>
        <hr class="separate">
        <div class="home">
            <br>
            <h2>Trending Recipes</h2>
            <hr class="container-divider">
            <div class="container-main">
                <div class="left-section">
                    <% main.forEach(main=> { %>
                        <div class="article-item">
                            <img src="/images/<%= main.main_img %>" alt="<%= main.name %>" class="main-image">
                            <div class="description">
                                <p class="tagline">
                                    <%= main.tagline %>
                                </p>
                                <a href="<%= main.web_url %>" class="main-link">
                                    <%= main.caption %>
                                </a>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <div class="right-section">
                    <% recipes.forEach(recipe=> { %>
                        <div class="recipe-item">
                            <img src="/images/<%= recipe.recipe_img %>" alt="<%= recipe.name %>" class="recipe-image">
                            <a href="/recipe/<%= recipe.recipe_id %>" class="recipe-link">
                                <%= recipe.name %>
                            </a>
                        </div>
                        <% }); %>
                </div>
            </div>

            <hr class="container-divider">
            <br>
            <h2>Featured Articles</h2>

            <div class="container">
                <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <% articles.forEach((article, index)=> { %>
                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                <a href="<%= article.web_url %>"> <!-- Assuming each article has a 'url' field -->
                                    <img src="/images/<%= article.article_img %>" class="d-block w-100"
                                        alt="<%= article.article_name %>">
                                    <div class="carousel-caption d-none d-md-block custom-caption">
                                        <h5>
                                            <%= article.caption %>
                                        </h5>
                                    </div>
                                </a>
                            </div>
                            <% }); %>
                    </div>

                    <!-- Left and right controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <br>
            <hr class="separate">
            <footer>
                <%- include('partials/footer') %>
            </footer>
</body>

</html>