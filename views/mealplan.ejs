<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>
        <%= meal_plan.name %> Meal Plan
    </title>
</head>

<body>
    <%- include('partials/navbar') %>
        <div class="content-container">
            <h2 class="title">
                <%= meal_plan.name %> Meal Plan
            </h2>
            <hr class="container-divider">
            <br>
            <div class="container">
                <div class="row">
                    <% if (typeof recipes !=='undefined' && recipes.length> 0) { %>
                        <% recipes.forEach(recipe=> { %>
                            <div class="col-lg-6 col-md-6 mb-4">
                                <div class="card">
                                    <img src="/images/<%= recipe.recipe_img %>" class="card-img-top"
                                        alt="<%= recipe.name %>">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= recipe.name %>
                                        </h5>
                                        <p class="card-text">
                                            <%= recipe.rating %>
                                        </p>
                                        <br>
                                        <a href="/recipe/<%= recipe.recipe_id %>" class="btn btn-primary">Read More</a>
                                        <div class="card-footer">
                                            <form action="/removePlan/<%= recipe.recipe_id %>" method="POST">
                                                <button type="submit" class="footer-link delete">Remove from plan</button>
                                            </form>
                                            <a href="/update-plan/<%= recipe.recipe_id %>"
                                                class="footer-link edit">Change plan</a>
                                        </div>
                                    </div>
                                </div><hr class="container-divider">
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No recipes found.</p>
                                    <% } %>
                        
                </div>
            </div>

            <a href="/plans" class="btn btn-secondary">Back to Meal Plans</a>
            <br><br>
            <hr class="separate">
            <footer>
                <%- include('partials/footer') %>
            </footer>
        </div>
</body>

</html>