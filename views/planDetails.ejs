<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Plans</title>
</head>

<body>
    <%- include ('partials/navbar') %>
        <div class="content-container">
            <h2 class="title">Select Your Meal Plan</h2>
            <hr class="container-divider">
            <br>

            <div class="container">
                <div class="row">
                    <% if (meal_plans && meal_plans.length> 0) { %>
                        <% meal_plans.forEach((meal_plan, index)=> { %>
                            <div class="col-20">
                                <div class="meal-plan-container">
                                    <div class="meal-plan">
                                        <div class="meal-plan-content <% if (index % 2 === 1) { %> reverse <% } %>">
                                            <img src="/images/<%= meal_plan.plan_img %>" class="meal-plan-image"
                                                alt="<%= meal_plan.name %>">
                                            <div class="meal-plan-description">
                                                <h3>
                                                    <%= meal_plan.name %>
                                                </h3>
                                                <p>
                                                    <%= meal_plan.description || 'No description available' %>
                                                </p>
                                                <p class="tagline">
                                                    <%= meal_plan.tagline %>
                                                </p>
                                                <a href="/meal-plan/<%= meal_plan.plan_id %>/recipes" class="btn btn-primary">View Meal Plan</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No meal plans found.</p>
                                    <% } %>
                </div>
            </div>

            <br><br>
            <hr class="separate">

            <footer>
                <%- include('partials/footer') %>
            </footer>
</body>

</html>