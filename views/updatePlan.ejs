<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Change Meal Plan for <%=recipe.name%>
    </title>
</head>

<body>
    <%- include ('partials/navbar') %>
        <div class="container mt-5">
            <h1 class="title">Change Meal Plan for <%=recipe.name%>
            </h1>
            <form action="/update-plan/<%= recipe.recipe_id %>" method="post">
                <div class="mb-3">
                    <label for="plan_id" class="form-label">Select your plan:</label>
                    <select id="plan_id" name="plan_id" class="form-select" required>
                        <% meal_plans.forEach(plan=> { %>
                            <option value="<%= plan.plan_id %>" <%=recipe.plan_id==plan.plan_id ? 'selected' : '' %>>
                                <%= plan.name %> <!--(ID: '<%= plan.plan_id %>')-->
                            </option>
                            <% }); %>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Confirm</button>
            </form>
        </div>
        <hr class="separate">
        <footer>
            <%- include('partials/footer') %>
        </footer>
</body>

</html>